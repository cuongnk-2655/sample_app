<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("app_name"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), "#" %></li>
        <li><%= link_to t("help"), "#" %></li>
        <li><%= link_to t("sign_in"), "#" %></li>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
            <%= t "header.language" %>
            <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <%= link_to t("header.en"), locale: :en %>
            <li class="divider"></li>
            <%= link_to t("header.vi"), locale: :vi %>
          </ul>
        </li>
        <% if logged_in? %>
          <li><%= link_to t("users"), "#" %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
              <%= t "header.account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.profile"), current_user %></li>
              <li><%= link_to t("header.edit"), "#" %></li>
              <li class="divider"></li>
              <li> <%= link_to t("sign_out"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("sign_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
